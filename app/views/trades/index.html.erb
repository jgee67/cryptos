<%= line_chart chart_data_trades_url({ group_by: Trade::DEFAULT_VISUALIZATION_GROUP_BY }), points: false, refresh: 60 %>
<div>Configuration</div>
<table>
  <tr>
    <th>
      Group By
    </th>
    <td>
      <div>
        <% Trade::VISUALIZATION_GROUP_BYS.each do |group_by| %>
            <%= radio_button_tag(:group_by, group_by, group_by == Trade::DEFAULT_VISUALIZATION_GROUP_BY ? true : false) %>
            <%= label(:group_by, group_by) %>
        <% end %>
      </div>
    </td>
  </tr>
  <tr>
    <th>
      Moving Average Numerator
    </th>
    <td>
      <div>
        <% Trade::MOVING_AVERAGE_NUMERATORS.each do |moving_average_numerator| %>
            <%= radio_button_tag(:moving_average_numerator, moving_average_numerator, moving_average_numerator == Trade::DEFAULT_MOVING_AVERAGE_NUMERATOR ? true : false) %>
            <%= label(:moving_average_numerator, moving_average_numerator) %>
        <% end %>
      </div>
    </td>
  </tr>
  <tr>
    <th>
      Moving Average Denominator
    </th>
    <td>
      <div>
        <% Trade::MOVING_AVERAGE_DENOMINATORS.each do |moving_average_denominator| %>
            <%= radio_button_tag(:moving_average_denominator, moving_average_denominator, moving_average_denominator == Trade::DEFAULT_MOVING_AVERAGE_DENOMINATOR ? true : false) %>
            <%= label(:moving_average_denominator, moving_average_denominator) %>
        <% end %>
      </div>
    </td>
  </tr>
  <tr>
    <th>
      Window Unit
    </th>
    <td>
      <div>
        <% Trade::VISUALIZATION_GROUP_BYS.each do |window_unit| %>
            <%= radio_button_tag(:window_unit, window_unit, window_unit == Trade::DEFAULT_WINDOW_UNIT ? true : false) %>
            <%= label(:window_unit, window_unit) %>
        <% end %>
      </div>
    </td>
  </tr>
  <tr>
    <th>
      Window Size
    </th>
    <td>
      <div>
        <% Trade::WINDOW_SIZES.each do |window_size| %>
            <%= radio_button_tag(:window_size, window_size, window_size == Trade::DEFAULT_WINDOW_SIZE ? true : false) %>
            <%= label(:window_size, window_size) %>
        <% end %>
      </div>
    </td>
  </tr>
</table>
<%= button_tag 'Apply', { id: :apply_button } %>

